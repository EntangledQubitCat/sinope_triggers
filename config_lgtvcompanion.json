{
  "auth": {
    "email": "{your_email}",
    "password": "{your_password}",
    "locationId": 1234,
    "deviceId": "5678"
  },
  "settings": {
    "check_interval": 6
  },
  "triggers": {
    "on_heater_on": [
      {
        "action_type": "parallel",
        "actions": [
          {
            "action_type": "keyboard",
            "key": "volume up",
            "repeat": 7
          },
          {
            "enabled": true,
            "action_type": "command",
            "command": "\"LGTV Companion.exe\" -button VOLUMEUP Device1",
            "repeat": 2,
            "condition": {
              "type": "ping",
              "host": "10.0.1.32",
              "count": 3,
              "timeout": 200
            }
          }
        ]
      },
      {
        "action_type": "sleep",
        "seconds": 50
      }
    ],
    "on_heater_off": [
      {
        "action_type": "parallel",
        "actions": [
          {
            "action_type": "keyboard",
            "key": "volume down",
            "repeat": 7
          },
          {
            "enabled": true,
            "action_type": "command",
            "command": "\"LGTV Companion.exe\" -button VOLUMEDOWN Device1",
            "repeat": 2,
            "condition": {
              "type": "ping",
              "host": "10.0.1.32",
              "count": 3,
              "timeout": 200
            }
          }
        ]
      },
      {
        "action_type": "sleep",
        "seconds": 570
      },
      {
        "enabled": true,
        "action_type": "command",
        "command": "sc stop LGTVsvc",
        "condition": {
          "type": "ping",
          "host": "10.0.1.32",
          "count": 3,
          "timeout": 200
        }
      },
      {
        "action_type": "sleep",
        "seconds": 3
      },
      {
        "enabled": true,
        "action_type": "command",
        "command": "sc start LGTVsvc",
        "condition": {
          "type": "ping",
          "host": "10.0.1.32",
          "count": 3,
          "timeout": 200
        }
      }
    ]
  }
}